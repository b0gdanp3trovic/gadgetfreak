extends layout
block append head
    script(src='/javascripts/register.js')
    
block content
  .row.justify-content-center
    .jumbotron.w-75(padding='', top='500px')
      h1.display-4 Comment
      p.lead Fill all of the required fields.
      hr.my-4
      form.form-horizontal(method="POST", action="", name="reg", role="form")
        -if (login == "false")
          .alert#emptyField.alert-danger(role="alert" ) Please log in or register to comment.
        .dropdown
        .form-group
          label Rate the gadget
          select#stars.form-control(name = 'stars')
            option 5
            option 4
            option 3
            option 2
            option 1
            option 0
        .form-group
          textarea#comment.form-control(name = 'commentContent', rows='3', placeholder='Your thoughts about the gadget...')
        button.btn.btn-secondary(type='submit') Submit
