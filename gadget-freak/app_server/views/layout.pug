doctype html
html(lang='en' ng-app = 'gadgetfreak')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title= title
        script(src='/angular/angular.min.js')
        script(src='/lib/angular-route.min.js')
        script(src='/angular/gadgetfreak.min.js')
        link(rel='stylesheet', href='/stylesheets/index.css')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous")
   
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
        script(src='/javascripts/index.js')
        script(src='/javascripts/register.js')
        script(src='/angular/angular.min.js')
        script(src='/lib/angular-route.min.js')
        script(src='/app.js')
        script(src='/index/index.controller.js')
        script(src='/forum/forum.controller.js')
        script(src='/forum/forumPost/forumPost.controller.js')
        script(src='/forum/addPost/addPost.controller.js')
        script(src='/skupno/storitve/forumData.service.js')
        script(src='/skupno/storitve/forumPostData.service.js')
        
        
        link(rel='stylesheet', href='../stylesheets/forumstyle.css')
        block head
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='/') Gadget Freak
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo02', aria-controls='navbarTogglerDemo02', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarTogglerDemo02.collapse.navbar-collapse
                ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                    li.nav-item
                        a.nav-link(href='/') Home
                    li.nav-item
                        a.nav-link(href='/add-gadget') Add item
                    li.nav-item
                        a.nav-link(href='/forum') Forum
                    li.nav-item
                        a.nav-link(href='/login') Log in
                    li.nav-item
                        a.nav-link(href='/register') Sign up
                    
                form.form-inline.my-2.my-lg-0
                    input.form-control.mr-sm-2(type='search', placeholder='Search')
                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
                - if(session.username)
                    div.col-auto(style = 'color: white;') #{session.username}
                    form(method="POST",  action="/logout", name="reg", role="form")
                        button.btn.btn-outline-success.my-2.my-sm-0( href='/logout') Log out

